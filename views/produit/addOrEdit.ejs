<h3>{{viewTitle}}</h3>

<form action="/produit" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{produit._id}}">
    <div class="form-group">
        <label>Action</label>
        <select id="action" class="form-control" name="action" value="{{produit.action}}">
        <option selected>Choisir...</option>
        <option>Vendre</option>
        <option>Acheter</option>
      </select>
      <div class="text-danger">
            {{produit.actionError}}</div>
    </div>
    <div class="form-group">
        <label>Quantite</label>
        <input type="text" class="form-control" name="quantite" placeholder="Quantite" value="{{produit.quantite}}">
        <div class="text-danger">
            {{produit.quantiteError}}</div>
    </div>
    <div class="form-group">
            <label>Prix</label>
            <input type="text" class="form-control" name="prix" placeholder="Prix" value="{{produit.prix}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Valider</button>
        <a class="btn btn-secondary" href="/produit/list"><i class="fa fa-list-alt"></i> Voir la liste</a>
    </div>
</form>



